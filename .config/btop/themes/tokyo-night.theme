# Tokyo Night theme for btop
# Based on https://github.com/folke/tokyonight.nvim

# Main background and foreground
theme[main_bg]="#1a1b26"
theme[main_fg]="#c0caf5"

# Title color
theme[title]="#c0caf5"

# Highlight for selected/hovered
theme[hi_fg]="#7aa2f7"

# Color for selected item
theme[selected_bg]="#292e42"
theme[selected_fg]="#c0caf5"

# Inactive/disabled text
theme[inactive_fg]="#565f89"

# Graphs
theme[graph_text]="#a9b1d6"

# Meter backgrounds
theme[meter_bg]="#292e42"

# Process box
theme[proc_misc]="#7aa2f7"

# CPU
theme[cpu_box]="#7aa2f7"
theme[cpu_start]="#9ece6a"
theme[cpu_mid]="#e0af68"
theme[cpu_end]="#f7768e"

# Memory
theme[mem_box]="#bb9af7"
